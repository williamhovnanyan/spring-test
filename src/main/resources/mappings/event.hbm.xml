<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="beans.models">

    <class name="Event" table="EVENT">
        <id name="id" column="ID">
            <generator class="identity"/>
        </id>
        <property name="name" column="NAME" type="string"/>
        <property name="rate" column="RATE">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">beans.models.Rate</param>
                <param name="useNamed">true</param>
            </type>
        </property>
        <property name="basePrice" type="double" column="BASE_PRICE"/>
        <property name="dateTime" type="java.time.LocalDateTime" column="DATE_TIME"/>
        <many-to-one name="auditorium" class="beans.models.Auditorium" column="AUDITORIUM" fetch="join" lazy="false"/>
    </class>

</hibernate-mapping>